# ============================================================================ #
#                  CORE ENVIRONMENT VARIABLES & FEATURE FLAGS                  #
# ============================================================================ #

# The applications current running environment.
# Possible values: development, production
NODE_ENV=development

# Port the application (this API) will try to listen on.
API_PORT=3000

# Minimum required version of the annotator service.
ANNOTATOR_MIN_VERSION=0.108.0

# Application version (auto-detected from package.json when running via pnpm)
# APP_VERSION=0.2.2

# Application name (auto-detected from package.json when running via pnpm)
# APP_NAME=rda-gateway

# ============================================================================ #
#                          IAM ENVIRONMENT VARIABLES                           #
# ============================================================================ #

# Authentication strategy the application should use.
# Possible values: keycloak, none
AUTH_STRATEGY=keycloak

# API key for authenticating requests to protected endpoints.
# Must be at least 32 characters. Required when AUTH_STRATEGY is not 'none'.
API_KEY=your-secure-api-key-here-min-32-chars

# The following values are should only be set for the chosen AUTH_STRATEGY

# Keycloak Strategy Configuration
KEYCLOAK_AUTH_URL=https://keycloak.dansdemo.nl/realms/rda
KEYCLOAK_CLIENT_ID=rda-auth
KEYCLOAK_REDIRECT_URL=http://localhost:3000/iam/signin-callback

# ============================================================================ #
#                        DATABASE ENVIRONMENT VARIABLES                        #
# ============================================================================ #

# Hostname where the database is running.
DATABASE_HOST=localhost

# Port where the API will try to connect to the database.
DATABASE_PORT=5432

# Username used to authenticate with the database.
DATABASE_USERNAME=postgres

# Password used to authenticate with the database.
DATABASE_PASSWORD=postgres

# Name of the database to connect to.
DATABASE_NAME=rda_gateway

# ============================================================================ #
#                     ELASTICSEARCH ENVIRONMENT VARIABLES                      #
# ============================================================================ #

# Username used to authenticate with the Elasticsearch instance.
ELASTIC_USERNAME=elastic

# Password used to authenticate with the Elasticsearch instance.
ELASTIC_PASSWORD=El@st1c!Str0ngP@ss2025#

# Comma separated list of Elasticsearch node endpoints for pool.
ELASTIC_NODE_ENDPOINTS=http://localhost:9200

# Whether to reject unauthorized TLS/SSL certificates. Should be true in
# production unless you have a specific reason to set it to false.
ELASTIC_REJECT_UNAUTHORIZED=true

# Whether the connection to Elasticsearch should use secure TLS/SSL.
# Set to true if your Elasticsearch endpoints start with "https://"
ELASTIC_SECURE=true
ELASTIC_ALIAS_NAME=rda

# ============================================================================ #
#                         REDIS ENVIRONMENT VARIABLES                          #
# ============================================================================ #

# Hostname where the Redis instance is running.
REDIS_HOST=localhost

# Port where the Redis instance is running.
REDIS_PORT=6379

# Password used to authenticate with the Redis instance.
REDIS_PASSWORD=redispassword

# ============================================================================ #
#                         MINIO ENVIRONMENT VARIABLES                          #
# ============================================================================ #

# Access key (username) for the Minio user
MINIO_USER=rda

# Secret key (password) for the Minio user
MINIO_PASSWORD=rda12345

# Port for Minio server
MINIO_PORT=9000

# Port for Minio console (web interface)
MINIO_CONSOLE_PORT=9001 

# ============================================================================ #
#                 DOCKER COMPOSE ONLY -- LOCAL DEVELOPMENT USE                 #
# ============================================================================ #
# The following variables are only used when running the application in a      #
# local development environment using docker-compose. They should not be used  #
# in production or other environments.                                         #
# ============================================================================ #

# Access key (username) for the Minio root user
MINIO_ROOT_USER=minio

# Secret key (password) for the Minio root user
MINIO_ROOT_PASSWORD=minio123
